# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=your-project-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# API Configuration
PORT=8000

# AI/ML APIs
# OpenAI - Used for embeddings (text-embedding-3-small)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Groq - Used for LLM chat completions (Llama 3.3 70B)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key

# Slack OAuth
# Create a Slack app at: https://api.slack.com/apps
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_REDIRECT_URI=http://localhost:8000/api/connect/slack/callback

# ClickUp OAuth
# Create a ClickUp app at: https://app.clickup.com/settings/apps
CLICKUP_CLIENT_ID=your-clickup-client-id
CLICKUP_CLIENT_SECRET=your-clickup-client-secret
CLICKUP_REDIRECT_URI=http://localhost:8000/api/clickup/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Ads Integration Configuration
# Controls whether ads data sync worker runs automatically
ADS_WORKER_ENABLED=true
# How often to sync ads data (in hours, default: 1 = hourly)
ADS_SYNC_INTERVAL_HOURS=1
# When to run daily anomaly detection (UTC time, HH:MM format)
ADS_ANOMALY_CHECK_TIME=4:00

# Ads Mock Mode
# Set to 'true' for testing with synthetic data, 'false' for production APIs
ADS_MOCK_MODE=true

# Google Ads API Configuration
# Create a Google Ads API app at: https://developers.google.com/google-ads/api/docs/get-started/oauth-cloud-project
# Developer token: https://developers.google.com/google-ads/api/docs/get-started/dev-token
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_CLIENT_ID=your-google-oauth-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_ADS_REDIRECT_URI=http://localhost:8000/api/v1/ads/oauth/google/callback

# Meta Ads (Facebook) API Configuration
# Create a Meta app at: https://developers.facebook.com/apps
# Configure Marketing API access: https://developers.facebook.com/docs/marketing-apis
META_ADS_APP_ID=your-meta-app-id
META_ADS_APP_SECRET=your-meta-app-secret
META_ADS_REDIRECT_URI=http://localhost:8000/api/v1/ads/oauth/meta/callback

# CIL (Continuous Improvement Learning) Configuration
# Set to 'true' to enable the CIL worker
CIL_ENABLED=true
# When to run daily learning cycle (UTC time, HH:MM format)
CIL_LEARNING_CYCLE_TIME=2:00
# How often to collect telemetry (in minutes)
CIL_TELEMETRY_INTERVAL_MINUTES=5
# How often to check for new proposals (in minutes)
CIL_PROPOSAL_CHECK_INTERVAL_MINUTES=15
